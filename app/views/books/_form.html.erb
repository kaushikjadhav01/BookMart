<!--section start-->
<section class="login-page section-big-py-space b-g-light">
    <div class="custom-container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4">
                <div class="theme-card">
                    <% if edit %>
                    <h3 class="text-center">Edit Book</h3>
                    <%else%>
                    <h3 class="text-center">Create New Book</h3>
                    <%end%>
                    <%= form_with(model: book, class:"theme-form") do |f| %>

                      <% if book.errors.any? %>
                        <div style="color: red">
                          <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

                          <ul>
                            <% book.errors.each do |error| %>
                              <li><%= error.full_message %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <div class="row g-3">
                      <div class="col-md-12 form-group">
                        <%= f.label :name %><br />
                        <%= f.text_field :name, autofocus: true, class: 'form-control'  %>
                      </div>

                      <div class="col-md-12 form-group">
                        <%= f.label :author %><br />
                        <%= f.text_field :author, autofocus: false, class: 'form-control' %>
                      </div>
                      </div>

                      <div class="row g-3">
                      <div class="col-md-12 form-group">
                        <%= f.label :publisher %><br />
                        <%= f.text_field :publisher, autofocus: true, class: 'form-control'  %>
                      </div>

                      <div class="col-md-12 form-group">
                        <%= f.label :stock %><br />
                        <%= f.number_field :stock, autofocus: false, class: 'form-control', :min =>  1, :max => 999999999999 %>
                      </div>

                      <div class="col-md-12 form-group">
                        <%= f.label :price %><br />
                        <%= f.number_field :price, autofocus: false, class: 'form-control', :min =>  1, :max => 999999999999 %>
                      </div>
                      </div>

                      
                      <div class="col-md-12 form-group">
                        <%= f.submit "Submit", class: "btn btn-normal", data: {turbo: false} %>
                      </div>
                      </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->