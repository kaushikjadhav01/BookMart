<!--section start-->
<section class="login-page section-big-py-space b-g-light">
    <div class="custom-container">
        <div class="row">
            <div class="col-xl-4 col-lg-6 col-md-8 offset-xl-4 offset-lg-3 offset-md-2">
                <div class="theme-card">
                    <h3 class="text-center">Login</h3>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, class: 'theme-form') do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                      <div class="form-group">
                        <%= f.label :login, class:"label" %>
                        <%= f.text_field :login, autofocus: true, placeholder: 'admn.bookmart@gmail.com or Regitser User', class: 'form-control' %>
                      </div>

                      <div class="form-group">
                        <%= f.password_field :password, autocomplete: "off", placeholder: 'Samplepass@123', class: 'form-control' %>
                      </div>

                      <% if devise_mapping.rememberable? -%>
                        <div class="form-group">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end -%>

                      <div class="form-group">
                          <%= f.submit "Log in", class: "btn btn-normal" %>
                          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "float-end txt-default mt-2"  %>
                      </div>
                    <% end %>
                    <p class="mt-3">Sign up for a free account at our store. Registration is quick and easy. It allows you to be able to order from our shop. To start shopping click register.</p>
                    <%= link_to "Create an Account", new_registration_path(resource_name), class: "txt-default pt-3 d-block" %>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->